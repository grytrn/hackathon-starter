extends ../layout

block content
  .page-header
    h3 Giriş Yap
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='email') Email
      .col-sm-7
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
    .form-group
      label.col-sm-3.control-label(for='password') Şifre
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Şifre', required)
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-success(type='submit')
          i.fa.fa-user
          | Giriş Yap
        a.btn.btn-link(href='/forgot') Şifreyi hatırlat!
    .form-group
      .col-sm-offset-3.col-sm-7
        hr
    .form-group
      .col-sm-offset-3.col-sm-7
        a.btn.btn-block.btn-twitter.btn-social(href='/auth/twitter')
          i.fa.fa-twitter
          | Twitter ile Giriş Yap